<body>
     <h1>Sign Up</h1>

     <form action="/user" method="POST">
        
        <input type="text" name="username" placeholder="Enter your name" style="width: 300px; padding: 10px;"/><br/><br/>
        <input type="email" name="email" placeholder="Enter your email" style="width: 300px; padding: 10px;"/><br/><br/>
        <input type="password" name="password" placeholder="Enter your password" style="width: 300px; padding: 10px;"/><br/><br/>
        <button type="submit" style="padding: 10px;">Sign Up</button>
     </form>
</body>
